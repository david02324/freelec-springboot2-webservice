{{>layout/header}}

<div style="text-align: center;"><h1>장다윗의 게시판</h1></div>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6" style="margin: 0 auto">
            <a href="/posts/save" role="button"
               class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class ="table table-horizontal table-bordered">
        <thread class="thread-string">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>내용</th>
                <th>최종수정일</th>
            </tr>
        </thread>
        <tbody id ="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{content}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}